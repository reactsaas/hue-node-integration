{
  "compilerOptions": {
    "target": "ES2020",             // Modern JavaScript
    "module": "ESNext",             // ES Module output
    "moduleResolution": "Node",     // Node.js-style module resolution
    "declaration": true,            // Generate type declarations
    "strict": true,                 // Enable strict type-checking
    "esModuleInterop": true,        // Enable ES Module interop
    "skipLibCheck": true,           // Skip type-checking for libraries
    "sourceMap": true               // Enable source maps
  },
  "include": ["src/**/*"],          // Include source files
  "exclude": ["node_modules", "dist"] // Exclude unnecessary files
}
